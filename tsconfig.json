{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "src",
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "docs",
    "styleguide.config.js",
    "src/**/index.js"
  ]
}