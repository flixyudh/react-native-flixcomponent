{
  "name": "react-native-flixcomponent",
  "version": "1.0.3",
  "description": "React Native Flix Custom Component",
  "main": "src/index",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build-ts",
    "build-ts": "tsc",
    "doc": "npx styleguidist server",
    "doc:build": "npx styleguidist build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zxccvvv/react-native-flixcomponent.git"
  },
  "keywords": [
    "ios",
    "android",
    "component",
    "ui",
    "react-native"
  ],
  "author": "Flix <flixy121@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zxccvvv/react-native-flixcomponent/issues"
  },
  "homepage": "https://github.com/zxccvvv/react-native-flixcomponent#readme",
  "files": [
    "src/**/*.js",
    "dist",
    "README.md"
  ],
  "eslintConfig": {
    "root": true,
    "extends": "@react-native-community",
    "ignorePatterns": [
      "node_modules/"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        },
        "warn",
        {
          "singleQuote": true
        }
      ],
      "react-native/no-inline-styles": "off",
      "no-undef": "off",
      "no-alert": "off",
      "react-hooks/exhaustive-deps": "off",
      "no-unused-vars": "off",
      "eqeqeq": "off",
      "curly": "off"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.17.10",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^18.0.9",
    "@types/react-native": "0.67.4",
    "babel-loader": "^8.2.5",
    "babel-plugin-react-native-web": "^0.17.7",
    "eslint": "7.14.0",
    "file-loader": "^6.2.0",
    "metro-react-native-babel-preset": "^0.66.2",
    "prop-types": "^15.8.1",
    "react": "17.0.2",
    "react-art": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "0.67.4",
    "react-native-web": "^0.17.7",
    "react-styleguidist": "^11.2.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1"
  }
}
